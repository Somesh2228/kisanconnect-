# Kisan Circle Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
APP_NAME=Kisan Circle
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Server Configuration
PORT=8000
FRONTEND_PORT=3000

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kisan_circle
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=kisan_circle_media
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# File Upload & Storage
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=kisan-circle-uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=Kisan Circle <noreply@kisancircle.in>

# SMS/WhatsApp Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External APIs
# Weather API
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Market Price API
MARKET_API_KEY=your_market_api_key
MARKET_API_URL=https://api.data.gov.in

# Government Schemes API
GOV_API_KEY=your_government_api_key

# Real-time Features
SOCKET_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400000

# Localization
DEFAULT_LANGUAGE=hi
SUPPORTED_LANGUAGES=en,hi,te,ta,bn,gu,mr,pa,or,as

# Push Notifications
FCM_SERVER_KEY=your_firebase_server_key
FCM_PROJECT_ID=your_firebase_project_id

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Development Tools
DEBUG=kisan-circle:*
ENABLE_CORS=true

# Production Security
HELMET_CSP_DIRECTIVES=default-src 'self'
SECURE_COOKIES=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
